package test1;
import javax.swing.*;

import java.awt.*;
import java.awt.event.*;
import java.io.*;

public class Main_activity {
	static JFrame frame;
	JButton btnOpenImg;
	JButton btnLeft;
	JButton btnGo;
	JButton btnRight;
	JButton btnQuit;
	JPanel pnlMain;
	JPanel pnlTitle;
	JPanel pnlButtons;
	JPanel pnlImg;
	public void main(){
		init();
		
		
		
	}
	private void init(){
		frame = new JFrame();
		frame.setSize(500, 500);
		frame.setVisible(true);
		btnOpenImg = new JButton("打开");
		btnGo = new JButton("生成");
		btnLeft = new JButton("←");
		btnRight = new JButton("→");
		btnQuit = new JButton("退出");
		GridBagLayout layout = new GridBagLayout();
		frame.getContentPane().add(pnlMain);
		frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		
		pnlTitle = getTitlePanel();
		
		pnlButtons = new JPanel();
		
		GridBagConstraints s= new GridBagConstraints();
		s.fill = GridBagConstraints.BOTH;
		
		s.gridwidth = 1;
		s.weightx = 0;
		s.weighty = 0;
	}
	private JPanel getMainPanel(){
		JPanel pnl = new JPanel();
		pnl.setLayout(new BoxLayout(pnl, BoxLayout.Y_AXIS));
		pnlTitle = getTitlePanel();
		pnlImg = getImgPanel();
		pnlButtons = getButtonsPanel();
		pnl.add(pnlTitle);
		pnl.add(pnlImg);
		pnl.add(pnlButtons);
		pnlTitle = getTitlePanel();
		return pnl;
	}
	private JPanel getTitlePanel(){
		JPanel pnl = new JPanel();
		JLabel lbTitle = new JLabel("Cara",JLabel.CENTER);
		pnl.add(lbTitle);
		return pnl;
	}
	private JPanel getButtonsPanel(){
		JPanel pnl = new JPanel();
		pnl.setLayout(new GridBagLayout());
		GridBagConstraints gbc=new GridBagConstraints();
		gbc.fill=GridBagConstraints.BOTH;
		gbc.gridx = 0;
		gbc.gridy = 0;
		gbc.gridwidth=1;
		gbc.gridheight=0;
		pnl.add(btnOpenImg, gbc);
		gbc.gridy = 1;
		gbc.gridwidth = 0; 
		pnl.add(btnGo, gbc);
		gbc.gridy = 2;
		gbc.gridwidth = 1;
		pnl.add(btnQuit, gbc);
		return pnl;
	}
	private JPanel getImgPanel(){
		JPanel pnl = new JPanel();
		JLabel lbTitle = new JLabel("Cara",JLabel.CENTER);
		pnl.add(lbTitle);
		return pnl;
	}
}
