package test1;
import javax.swing.*;

import java.awt.*;
import java.awt.event.*;
import java.io.*;

public class Main_activity {
	static JFrame frame;
	JButton btnOpenImg;
	JButton btnLeft;
	JButton btnRight;
	JButton btnQuit;
	JPanel pnlImg;
	
	public void main(){
		init();

		
		
	}
	private void init(){
		frame = new JFrame();
		frame.setSize(500, 500);
		frame.setVisible(true);
		btnOpenImg = new JButton("´ò¿ª");
		btnLeft = new JButton("¡û");
		btnRight = new JButton("¡ú");
		btnQuit = new JButton("ÍË³ö");
		GridBagLayout layout = new GridBagLayout();
		frame.setLayout(layout);
		frame.add(btnLeft);
		frame.add(btnOpenImg);
		frame.add(btnQuit);
		frame.add(btnRight);
		frame.add(pnlImg);
		frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		
		GridBagConstraints s= new GridBagConstraints();
		s.fill = GridBagConstraints.BOTH;
		
		s.gridwidth = 1;
		s.weightx = 0;
		s.weighty = 0;
		layout.setConstraints(j1, s);
	}
}
